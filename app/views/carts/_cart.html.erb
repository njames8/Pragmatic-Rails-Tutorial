<%= react_component("CartSidebar", {
    lineItems: cart.line_items.to_json(
        :include => {
            :product => {
                :only => [:title]
            }
        },
        :only => [:id, :price, :quantity]
    ),
    totalPrice: cart.total_price,
    currentItem: cart.current_item,
    title: t('.title'),

}, {prerender: true}) %>

<% if !current_page?(:controller => "orders", :action => "new") %>
    <%= button_to t('.checkout'), new_order_path, method: :get %>
<% end %>
<%= button_to t('.empty'), cart, method: :delete, data: { confirm: t('.confirm_html') } %>