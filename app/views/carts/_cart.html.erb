<h2><%= t('.title') %></h2>
<table>
    <%= render(cart.line_items) %>

    <tr class="total_line">
        <td colspan="2">Total</td>
        <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
</table>

<% if !current_page?(:controller => "orders", :action => "new") %>
    <%= button_to t('.checkout'), new_order_path, method: :get %>
<% end %>
<%= button_to t('.empty'), cart, method: :delete, data: { confirm: t('.confirm_html') } %>